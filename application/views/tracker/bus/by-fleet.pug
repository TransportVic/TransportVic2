extends ../../layout

block head
  -
    title = 'TransportVic - Tracker/Bus - By Fleet'
    description = `Tracking Bus ${fleet} (${rego})`
  title #{title}
  link(rel='preload' as='style' href=`${staticBase}/static/css/tracker/results.css`)

block title
  span Bus Tracker - By Fleet

block style
  link(rel='stylesheet' href=`${staticBase}/static/css/tracker/results.css`)

block content
  if regoData
    h1.title Tracking Bus #{regoData.fleetNumber} (#{regoData.rego}) on #{date.format('dddd, MMMM Do YYYY')}
  else
    h1.title Tracking Bus #{query} on #{date.format('dddd, MMMM Do YYYY')}
  for trip in tripsToday
    div(class=`trip ${trip.active ? '' : 'inactive'}`)
      a(href=trip.tripURL) #{trip.departureTime} #{trip.origin} - #{trip.destination} #{trip.routeNumber}

  h1.title Past deployments:
  div#pastDeployments
    include ./history
    +history(`/bus/tracker/fleet?fleet=${query}`, servicesByDay)