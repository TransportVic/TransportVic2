extends ../../layout

block head
  -
    title = 'TransportVic - Tracker/Metro - HCMT'
    description = 'Tracking Metro HCMT Trips'
  title #{title}
  link(rel='preload' as='style' href='/static/css/tracker/results.css')
  
block title
  span Metro Tracker - HCMT

block style
  link(rel='stylesheet' href='/static/css/tracker/results.css')

block content
  h1.title Tracking HCMT Trips on #{date.format('dddd, MMMM Do YYYY')}
  for trip in trips
    div(class=`trip ${trip.active ? '' : 'inactive'}`)
      a(href=trip.url) ##{trip.runID}: #{trip.trueDepartureTime} #{trip.trueOrigin} - #{trip.trueDestination}
