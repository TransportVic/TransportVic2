extends ../../layout

block head
  -
    title = 'TransportVic - Tracker/V/Line - By Line'
    description = `Tracking all V/Line trips on the ${line} Line`
  title #{title}
  link(rel='preload' as='style' href=`${staticBase}/static/css/tracker/results.css`)
  
block title
  span V/Line Tracker - By Line

block style
  link(rel='stylesheet' href=`${staticBase}/static/css/tracker/results.css`)

block content
  h1.title Tracking Trips on #{line} Line on #{date.format('dddd, MMMM Do YYYY')}
  for trip in trips
    div(class=`trip ${trip.active ? '' : 'inactive'}`)
      a(href=trip.url) ##{trip.runID}: #{trip.departureTime} #{trip.origin} - #{trip.destination}: #{trip.consist ? trip.consist.join('-') : ''}
