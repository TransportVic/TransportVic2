extends layout
    
block head
  title TransportVic

  link(rel='preload' as='style' href='/static/css/index.css')
  link(rel='preload' as='image' href='/static/images/home/smartbus.svg')
  link(rel='preload' as='image' href='/static/images/home/search.svg')
  link(rel='preload' as='image' href='/static/images/home/nearby.svg')
  link(rel='preload' as='image' href='/static/images/home/about.svg')
  link(rel='preload' as='image' href='/static/images/home/rainbow.svg')
  link(rel='preload' as='script' href='/static/scripts/index.js')
  
block title
  span TransportVic

block scripts
  script(src='/static/scripts/index.js')

block style
  link(rel='stylesheet' href='/static/css/index.css')

block content
  div.wrap
    a(href='/bookmarks').feature
      img(src='/static/images/home/smartbus.svg' alt='Bookmarks')
      span Bookmarks
    a(href='/search').feature
      img(src='/static/images/home/search.svg' alt='Search')
      span Search
    a(href='/nearby').feature
      img(src='/static/images/home/nearby.svg' alt='Nearby PT Stops')
      span Nearby PT Stops
    a(href='/links').feature
      img(src='/static/images/home/about.svg' alt='Links')
      span Links

  a(href='' style='display: none').popup
    img(src='/static/images/home/rainbow.svg')
    span
