extends ../layout

block head
  title TransportVic - Mockups
  
block title
  span Mockups
  
block style
  link(rel='stylesheet' href=`${staticBase}/static/css/form.css`)

block content
  h1#title Mockups
  form(action='/mockups/get' method='get')
    label Get Station PID
    br
    input(type='text' name='station' placeholder='Station Name' required)
    br
    input(type='text' name='value' placeholder='Platform (* for all)' required)
    div
      div.customDropdown
        select(name="type" autocomplete="off")
          option platform
          option half-platform
          option half-platform-bold
          option fss-platform
          option fss-escalator
          option pre-platform-vertical
          option crt
          option vline-half-platform
          option 2-line-led
        span platform
      input(type='submit' value='Go')
  form(action='/mockups/get' method='get')
    label Get Concourse PID
    br
    input(type='text' name='station' placeholder='Station Name' required)
    div.submissionRow
      div.customDropdown
        select(name="concourseType" autocomplete="off")
          option interchange
          option up-down
        span interchange
      input(type='submit' value='Go')
    input(type='hidden' name='type' value='concourse')
  form(action='/mockups/get' method='get')
    label Get Bus Interchange PIDs for bus stop URL
    br
    input(type='text' name='value' placeholder='Bus Timings URL' required)
    div.submissionRow
      input(type='text' name='bay' placeholder='Bus Bay (Blank for all)')
      input(type='submit' value='Go')
    input(type='hidden' name='type' value='bus-int-pids')
  form(action='/mockups/get' method='get')
    label Get station summary page
    br
    input(type='text' name='station' placeholder='Station Name' required)
    div.submissionRow
      input(type='text' name='value' placeholder='PID Type (Leave blank for default)')
      input(type='submit' value='Go')
    input(type='hidden' name='type' value='summary')
