html
  head
    link(rel='stylesheet' href='/static/css/mockups/summary.css')
  body
    div.container
      - for (let i = 1; i <= query.platforms; i++) {
      -
        if (query.exclude.includes(i)) continue
        let url
        if (query.type === 'suburban-text') url = `/mockups/metro-lcd-pids/${station}/${i}/`
        if (query.type === 'suburban-list') url = `/mockups/metro-lcd-pids/${station}/${i}/list`
        if (query.type === 'fss-escalator') url = `/mockups/fss-escalator/${i}/${station}/?scale`

      div(class=`platform ${query.type}`)
        div.title
          a(href=url)=`/{STATION}/platform/${i}`
        iframe(src=url)
      - }
