  body.rotated
    div(style='display: none;').fullMessage
      img(src='/static/images/mockups/announcements.svg')
      p Please Listen for Announcements
    div.content
      div.topLineBanner.no-line
      div.firstDepartureInfo.messageActive
        div
          div.details
            p.firstDepartureTime --
            p.firstDestination --
          div.firstDepartureRight
            div.platform.no-line
              span=platform
            div.minutesToDeparture
              span -- min
        p.firstStoppingType --
      div.stoppingPattern.no-line
        div.serviceMessage
          img(src='/static/images/mockups/no-boarding-train.svg')
          p Checking departures
          p Please wait...
      div.nextDepartures
        for departure in [1,2,3,4]
          div.nextDeparture
            div.lineColour.no-line
            span.scheduledDepartureTime --
            span.destination --
            div.platform.no-line
              span &nbsp;
            div.minutesToDeparture
              span -- min

