html
  head
    script(src=`${staticBase}/static/scripts/util.js`)
    script(src=`${staticBase}/static/scripts/mockups/reload-bus-int-pids.js` async) 
    script(src=`${staticBase}/static/scripts/mockups/pids-utils.js` async)
    link(rel='stylesheet' href=`${staticBase}/static/css/mockups/base-style.css`)
    link(rel='stylesheet' href=`${staticBase}/static/css/mockups/bus-int-pids/bus-int-pids.css`)

    if full
      link(rel='stylesheet' href=`${staticBase}/static/css/mockups/16-9-pids-base.css`)
      link(rel='preload' as='style' href=`${staticBase}/static/css/mockups/16-9-pids-base.css`)
    else
      link(rel='stylesheet' href=`${staticBase}/static/css/mockups/32-9-pids-base.css`)
      link(rel='preload' as='style' href=`${staticBase}/static/css/mockups/32-9-pids-base.css`)

    link(rel='preload' as='style' href=`${staticBase}/static/css/mockups/base-style.css`)

    meta(name='format-detection' content='telephone=no')
  body
    - let busCount = full ? (trainDepartures ? 9 : 14) : (trainDepartures ? 4 : 7)
    div(class=full ? 'content full' : 'content')
      div.message
        div
          div.info-circle
            img(src=`${staticBase}/static/images/mockups/information.svg`).information
          div.text
            p For more information 
            p visit ptv.vic.gov.au
            p or call 1800 800 007
      div.timings
        div.row.header
          span.route Route
          span.dest Bus Destination
          span.scheduled Scheduled
          span.departing Departing

        - for (let i = 0; i < busCount; i++)
          div.row
        
        if trainDepartures
          div.row.train-header
            span Train Services
          - for (let i = 0; i < (full ? 4 : 2); i++)
            div.row
        
      div.info
        div#hotline
          div.info-circle
            img(src=`${staticBase}/static/images/mockups/information.svg`).information
          div.call-hotline
            p For more information 
            p visit ptv.vic.gov.au
            p or call 1800 800 007
        div.spacer
        div#timebox
          span#current-time #{time.format('h:mm')}
