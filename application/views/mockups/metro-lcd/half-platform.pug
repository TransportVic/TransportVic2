html
  head
    script(src='/static/scripts/util.js')
    script(src='/static/scripts/mockups/pids-utils.js')
    script(src='/static/scripts/mockups/metro-lcd/half-platform.js' async)
    link(rel='stylesheet' href='/static/css/mockups/base-style.css')
    link(rel='stylesheet' href='/static/css/mockups/32-9-pids-base.css')
    link(rel='stylesheet' href='/static/css/mockups/metro-lcd/half-platform.css')
      
    link(rel='preload' as='style' href='/static/css/mockups/base-style.css')
    link(rel='preload' as='style' href='/static/css/mockups/32-9-pids-base.css')
    link(rel='preload' as='image' href='/static/images/mockups/announcements.svg')
    input(type='hidden' name='csrf' value=csrf)
  
    meta(name='viewport' content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width, height=device-height')
  body
    div.content
      div(style='display: none;').fullMessage
        img(src='/static/images/mockups/announcements.svg')
        p Please Listen for Announcements
      div(style='display: block;').left
        div(style='display: flex;').message
          p Checking departures
          p Please wait...
        div(style='display: none;').nextDeparture
          div.departureInfo
            span.text.firstDestination --
            div.text.scheduledDiv
              span Scheduled
              span --
            div.text.actualDiv
              span Departing
              div
                span --
                span min
            div.burnLine.reset
          div.hozWhiteLine
          div.serviceMessage
            
          div.stops
      div.vertLine
      div(style='display: flex;').right
        div.headers
          span.scheduled Schedule
          span.destination Train To
          span.actual Departing
        div.followingDeparture
          div.departureData
            span.scheduled --
            span.destination --
            span.actual --
            span.min min
          span.stoppingType 
        div.followingDeparture
          div.departureData
            span.scheduled --
            span.destination --
            span.actual --
            span.min min
          span.stoppingType
        div.followingDeparture
          div.departureData
            span.scheduled --
            span.destination --
            span.actual --
            span.min min
          span.stoppingType
        div.clock
          div.clockContainer
            span=now.format('h:mm')
          
