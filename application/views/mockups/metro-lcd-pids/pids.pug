html
  head
    script(src='/static/scripts/util.js')
    script(src='/static/scripts/mockups/reload-metro-lcd-pids.js' async) 
    link(rel='stylesheet' href='/static/css/mockups/base-style.css')
    link(rel='stylesheet' href='/static/css/mockups/mini-pids-base.css')
    link(rel='stylesheet' href='/static/css/mockups/metro-lcd-pids/metro-lcd-pids.css')
      
    link(rel='preload' href='/static/images/mockups/announcements.svg' as='image')
    link(rel='preload' href='/static/images/fonts/NetworkSansRegular.svg' as='font')
    link(rel='preload' href='/static/images/fonts/NetworkSansMedium.svg' as='font')
    link(rel='preload' href='/static/images/fonts/NetworkSansBold.svg' as='font')
      
    meta(name='viewport' content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width, height=device-height')
  body
    -
      function formatTime(time) {
        let hours = time.getHours()
        let minutes = time.getMinutes()
        let mainTime = ''

        mainTime += (hours % 12) || 12
        mainTime += ':'
        if (minutes < 10) mainTime += '0'
        mainTime += minutes

        return mainTime
      }
    div.content
      div(style='display: none;').fullMessage
        img(src='/static/images/mockups/announcements.svg')
        p Please Listen for Announcements
      div(style='display: block;').nextDepartures
        div.message(style='display: flex;')
          p Checking departures
          p Please wait...
        div(style='display: none;').firstDeparture
          div.topRow
            div.burnLine.reset
            p.firstDestination --
            div.firstDepartureInfo
              div.scheduled
                p Scheduled
                p --
              div.actual
                p Departing
                div
                  span --
                  span min
          div.middleRow
            p.serviceMessage Stand Clear Train Departing
            p.stoppingType --
            p(style='opacity: 0;' data-text='--').stoppingPattern --
        div.whiteLine
        div.bottomRow
          span --
          span --
          span --
          div
            span --
            span min
            
          div.timeNow
           span=formatTime(new Date())
          
